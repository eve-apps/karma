extend dashboard

block append head
  //- Stylesheets
  link(rel="stylesheet", type="text/css", href="/css/lib/jquery.dataTables.min.css")
  link(rel="stylesheet", type="text/css", href="/plugins/select2/select2.min.css")
  
  //- Javascript
  script(type="application/javascript", src="/js/lib/jquery.dataTables.min.js")
  script(type="application/javascript", src="/plugins/select2/select2.full.min.js")
  script(type="application/javascript", src="/js/refining.js")

block content
  .row
      // left column
      .col-md-6
        // general form elements
        .box.box-success
          .box-header.with-border
            h3.box-title Character Info
          // /.box-header
          // form start
          form
            .box-body
              .form-group
                input#refiningSkillInput.form-control(type="refining", placeholder="Refining Skill")
              .form-group
                input#refiningEffeciencySkillInput.form-control(type="refiningEff", placeholder="Refining Effecienccy Skill")
              .form-group
                .row
                  .col-xs-2
                    label(for="mineral1") Veldspar
                  .col-xs-2
                    label(for="mineral2") Scordite
                  .col-xs-2
                    label(for="mineral3") Omber
                  .col-xs-2
                    label(for="mineral4") Plaigioclase
                  .col-xs-2
                    label(for="mineral5") Jaspet
                .row
                  .col-xs-2
                    select#mineral1.form-control(type="mineral1", placeholder="Dark Ocher Refining Skill")
                      option  0
                      option  1
                      option  2
                      option  3
                      option  4
                      option  5
                  .col-xs-2
                    select#mineral2.form-control(type="mineral2", placeholder="Dark Ocher Refining Skill")
                      option  0
                      option  1
                      option  2
                      option  3
                      option  4
                      option  5
                  .col-xs-2
                    select#mineral3.form-control(type="mineral3", placeholder="Dark Ocher Refining Skill")
                      option  0
                      option  1
                      option  2
                      option  3
                      option  4
                      option  5
                  .col-xs-2
                    select#mineral4.form-control(type="mineral4", placeholder="Plaigioclase Refining Skill")
                      option  0
                      option  1
                      option  2
                      option  3
                      option  4
                      option  5
                  .col-xs-2
                    select#mineral5.form-control(type="mineral5", placeholder="Jaspet Refining Skill")
                      option  0
                      option  1
                      option  2
                      option  3
                      option  4
                      option  5



                
              .form-group
                input#mineral2.form-control(type="mineral2", placeholder="Scordite Refining Skill")
              .form-group
                input#mineral3.form-control(type="mineral3", placeholder="Omber Refining Skill")
              .form-group
                input#mineral4.form-control(type="mineral4", placeholder="Jaspet Refining Skill")
              .form-group
                label(for="mineral5") Dark Ocher
                .col-xs-3
                  select#mineral5.form-control(type="mineral5", placeholder="Dark Ocher Refining Skill")
                    option  0
                    option  1
                    option  2
                    option  3
                    option  4
                    option  5
            // /.box-body
            .box-footer
              button.btn.btn-primary(type="submit") Submit
        // /.box
      .col-md-6
        // Horizontal Form
        .box.box-warning
          .box-header.with-border
            h3.box-title Ore Entry
          // /.box-header
          // form start
          form
            .box-body
              .form-group
                .row
                  label.col-xs-1(for="oreInput1") Ore
                  .col-xs-4
                    select#oreInput1.form-control.select2(type="select", placeholder="Ore Type")
                      option Veldspar
                      option Omber
                      option Arknor
                  label.col-sm-2(for="inputQuantity") Quantity
                  .col-xs-3
                    input#inputQuantity.form-control(type="input", placeholder="Quantity")
                  .col-xs-2
                    button#addButton.btn.btn-info.pull-right(type="button") Add
              
            // /.box-body
            .box-footer
              table#refiningSource.display
            // /.box-footer
        // /.box
